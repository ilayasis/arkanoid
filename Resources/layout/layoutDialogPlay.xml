<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/imagesnb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
        android:text="בחר מצב משחק מועדף "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="27sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abraham_regular"
        android:textColor="	#4747d1"
        android:id="@+id/textViewGameMode" />
    <Button
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        android:text="Manual"
        android:id="@+id/buttonDialogManual"/>
    <Button
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        android:text="Accelerometer"
        android:id="@+id/buttonDialogAccelerometer"/>
</LinearLayout>
